<table class="comment w-100">
  <tr>
    <td>
      <img class="comment-avatar" src={{avatarSrc}} width="1"/>
    </td>
    <td class="comment-cell">
      <h4 class="comment-name">{{name}}</h4>
      <p class="comment-comment">{{comment}}</p>
    </td>
    <td class="comment-time" width="1">{{timeString}}</td>
  </tr>
</table>
